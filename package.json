{
  "name": "use-majboori",
  "version": "1.0.0",
  "description": "A React hook that forces you to justify your useEffect usage with a reason, plus an ESLint plugin to enforce it",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./eslint-plugin": {
      "types": "./dist/eslint-plugin.d.ts",
      "import": "./dist/eslint-plugin.mjs",
      "require": "./dist/eslint-plugin.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/eslint-plugin.ts --format cjs,esm --dts",
    "prepublishOnly": "pnpm build",
    "lint": "tsc --noEmit"
  },
  "keywords": [
    "react",
    "hooks",
    "useEffect",
    "majboori",
    "helplessness",
    "typescript",
    "eslint",
    "eslint-plugin",
    "linting"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "eslint": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/eslint": "^8.56.0",
    "@types/node": "^24.9.2",
    "@types/react": "^18.2.0",
    "eslint": "^8.57.0",
    "react": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hallucinogenizer/use-majboori"
  },
  "bugs": {
    "url": "https://github.com/hallucinogenizer/use-majboori/issues"
  }
}
